<div class="list-group">
    <% @chat.each do |msg| %>
      <div class="d-flex flex-row justify-content-end mb-4">
        <div class="p-3 me-3 border" style="border-radius: 15px; background-color: #fbfbfb;">
          <p class="small mb-0"><%= msg.content %>
          
          <br>
          <div style="color: gray; font-size: 12px; margin:0; padding:0">
          <%= msg.user.uni.to_s + " --- " + msg.date_posted.to_s %>
          </div>
          
          
        </div>
        <img src="data:image/jpeg;base64,"
          alt="avatar 1" style="width: 45px; height: 100%;">

      </div>
    <% end %>
</div>


<%= form_with url: "message", method: :post do |form| %>
  <%= form.label :msg, "Message:" %>
  <%= form.text_field :msg , required: "true"%>
  <%= form.submit "Send" %>
<% end %>

<%= button_to "Back", { action: "info" }, method: :get, class: "btn btn-primary btn-block mb-4", id: "chat_button" %>
